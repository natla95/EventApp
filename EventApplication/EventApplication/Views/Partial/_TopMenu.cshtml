    }

    #userName {
        margin-right: 10px;
    }
</style>

<header>
    <img class="logo" src="/Content/images/logo.png" />
    <div class="header_title">Gość weselny</div>
    <div class="user_log">
        <span id="userName">Admin</span>
        <i id="userIcon" class="fa fa-user-circle fa-2x" aria-hidden="true"></i>
        <div class="log_out not_active" id="logOut" onclick="location.href='@Url.Action("Logout", "Account")'">wyloguj</div>
    </div>
</header>