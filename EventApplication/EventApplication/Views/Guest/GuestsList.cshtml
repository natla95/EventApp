@using EventApplication.Models.ViewModels
@model GuestListViewModel
@{
    ViewBag.Title = "Lista gości";
    Layout = "~/Views/Shared/_ListDataLayout.cshtml";
}

<section class="panel_title">
    <div>Lista gości</div>
</section>

@if (ViewBag.AreGuests == "no")
{
    <section id="noInvitations">
        <p>Jak na razie nie dodałeś gości <br />do swojej uroczystości</p>
        <div style="width: 80%">
            <img class="balon_img" style="transform: rotate(20deg);" src="~/Content/images/balon_pink.png" />
        </div>
        <div>
            <img class="balon_img" src="~/Content/images/balon_white.png" />
        </div>
    </section>
}

@if (ViewBag.AreGuests == "yes")
{
    <section class="padding_section display_inline">
        <div id="deleteMore" class="button action_button" onclick="">usuń</div>
    </section>

    <!--list of guest --> 
    <section class="table padding_section">
        <table id="guestsTable" class="find-duplicates table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th><span class="columnName"><input type="checkbox" id="checkAllRows" value="all" data-size="sm"></span></th>
                    <th><span class="columnName">Imię</span></th>
                    <th><span class="columnName">Nazwisko</span></th>
                    <th><span class="columnName">Wiek</span></th>
                    @foreach (OptionViewModel option in Model.optionsList)
                    {
                        <th><span class="columnName">@Html.DisplayFor(modelItem => option.OptionName)</span></th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (GuestViewModel item in Model.guestsList)
                {
                    <tr>
                        <td><span><input type="checkbox" value="@(item.InvitationID)" name="rowId" id="rowId"></span></td>
                        <td><span class="columnValue">@Html.DisplayFor(modelItem => item.FirstName)</span></td>
                        <td><span class="columnValue">@Html.DisplayFor(modelItem => item.LastName)</span></td>
                        <td><span class="columnValue">@Html.DisplayFor(modelItem => item.Age)</span></td>
                        @foreach(OptionViewModel option in Model.optionsList)
                        {
                           <td><span class="columnValue"></span></td>
                        }
                        <td>
                            <span class="columnValue">
                                <i class="fa fa-pencil-square-o" aria-hidden="true" onclick="location.href='@Url.Action("EditGuest", "Guest")'"></i>
                                <i class="fa fa-trash-o" aria-hidden="true" onclick="location.href='@Url.Action("DeleteGuest", "Guest")'"></i>
                            </span>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </section>
}

@Scripts.Render("~/bundles/main")
<script>
    $(document).ready(function () {
        $('#guestsTable').DataTable({
            "oLanguage": {
                "sEmptyTable": "Brak danych, przepraszamy", 
                "sInfo": "Strona _PAGE_ z _PAGES_",
                "sSearch": "<span>Wyszukaj:</span> _INPUT_",
                "sLengthMenu": "<span>ilość na stronie:</span> _MENU_", 
                "oPaginate": { "sFirst": "Pierwsza", "sLast": "Ostatnia", "sNext": ">", "sPrevious": "<" }
            }
        });
    });
</script>


