@model EventApplication.Models.ViewModels.EventViewModel

@{
    ViewBag.Title = "Edycja uroczystości";
    Layout = "~/Views/Shared/_EventPageLayout.cshtml";
}

<section class="panel_title">
    <div>Edytuj uroczystość</div>
</section>
